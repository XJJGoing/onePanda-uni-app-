<view class="articleList"><view class="content"><block wx:for="{{articleList}}" wx:for-item="item" wx:for-index="index" wx:key="index"><block><view class="article" id="{{item.id}}" data-event-opts="{{[['tap',[['toArticleContent',['$0'],[[['articleList','',index,'id']]]]]]]}}" bindtap="__e"><view class="article-header"><view class="article-header-author"><image src="{{item.articleUser.qqAvatarUrl!=''?item.articleUser.qqAvatarUrl:item.articleUser.wxAvatarUrl}}"></image><text>{{"作者："+item.author}}</text></view><view class="article-header-time"><text>{{"发表时间："+item.createTime}}</text></view></view><view class="article-title"><text>{{item.title}}</text></view><view class="article-layout"><image src="{{item.layout}}" mode="aspectFit"></image></view><view class="article-abstract"><text>{{"摘要："+item.articleAbstract}}</text></view><view class="article-label"><uni-tag vue-id="{{'1-'+index}}" type="error" circle="true" size="small" text="{{item.articleKind1}}" bind:__l="__l"></uni-tag><uni-tag vue-id="{{'2-'+index}}" type="success" circle="true" size="small" text="{{item.articleKind2}}" bind:__l="__l"></uni-tag></view></view></block></block></view></view>