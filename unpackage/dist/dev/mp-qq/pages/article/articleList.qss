.articleList{
	width: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	font-size: 24rpx;
}
.content{
    width: 90%;
    /* background-color: #00BFFF; */
}
.article{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	margin-top: 10rpx;
	border-radius: 10rpx;
	border: 1rpx solid #E8E8E8;
	padding: 10rpx;
}
.article view{
	margin-top: 10rpx;
}
.article-header{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
    height: 100rpx;
}
.article-header-author,.article-header-time{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
    -webkit-box-pack:justify;
    -webkit-justify-content:space-between;
            justify-content:space-between;
	-webkit-box-align: center;
	-webkit-align-items: center;
	        align-items: center;
	height: 70rpx;
}
.article-header-author text{
	font-size: 30rpx;
}
.article-header-time text{
	color:#AAAAAA;
}
.article-header-author image{
	height: 50rpx;
	width: 50rpx;
	border-radius: 50%;
}
.article-title,.article-layout{
	width: 90%;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	        justify-content: center;
}
.article-title text{
	font-size: 35rpx;
	font-weight: 700;
	text-align: center;
}
.article-layout image{
	width: 250rpx;
	height: 250rpx;
}
.article-abstract text{
	font-weight: 500;
	color:#AAAAAA;
	font-size: 28rpx;
}
.article-label{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: horizontal;
	-webkit-box-direction: normal;
	-webkit-flex-direction: row;
	        flex-direction: row;
}
.article-label uni-tag{
	margin-left: 20rpx;
}

